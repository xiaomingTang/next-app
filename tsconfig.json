{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@ADMIN/*": ["./src/app/admin/*"],
      "@D/*": ["./src/app/(default-layout)/*"],
      "@F/*": ["./src/app/(fullscreen-layout)/*"],
      "@I/*": ["./src/app/(iframe-layout)/*"],
      "@ROOT/*": ["./*"],
      "@WASM/*": ["./src/wasm/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
